<UserControl x:Class="MVVMFirma.Views.WszystkiePozycjeFakturySprzedazyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding PozycjeFakturySprzedazy}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Nr faktury"
                                    Binding="{Binding FakturaSprzedazy.NumerFaktury}" />

                <DataGridTextColumn Header="Data sprzedaży"
                                    Binding="{Binding FakturaSprzedazy.DataSprzedazy}" />

                <DataGridTextColumn Header="Kontrahent"
                                    Binding="{Binding FakturaSprzedazy.Kontrahent.Nazwa}" />


                <DataGridTextColumn Header="Towar"
                                    Binding="{Binding Towar.Nazwa}" />

                <DataGridTextColumn Header="Ilość"
                                    Binding="{Binding Ilosc}" />

                <DataGridTextColumn Header="Cena netto"
                                    Binding="{Binding CenaNetto}" />

                <DataGridTextColumn Header="Wartość netto"
                                    Binding="{Binding WartoscNetto}" />

                <DataGridTextColumn Header="VAT %"
                                    Binding="{Binding StawkaVat.Wartosc}" />

                <DataGridTextColumn Header="Wartość VAT"
                                    Binding="{Binding WartoscVat}" />

                <DataGridTextColumn Header="Wartość brutto"
                                    Binding="{Binding WartoscBrutto}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
