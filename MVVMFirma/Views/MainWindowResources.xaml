    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:WszystkieRaportStanMagazynowyViewModel}">
        <vw:WszystkieRaportStanMagazynowyView />
    </DataTemplate>

    <!-- STYLE I SZABLONY (bez zmian) -->
    <Style x:Key="MainHCCStyle" TargetType="{x:Type HeaderedContentControl}">
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Background="{StaticResource KassPrimaryBrush}"
                            BorderBrush="{StaticResource KassPrimaryDarkBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="4"
                            Padding="4">
                        <TextBlock FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource KassLightTextBrush}"
                                   HorizontalAlignment="Center"
                                   Text="{Binding}" />
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
