    </DataTemplate>

    <!-- 🔥 RAPORTY – LOGIKA BIZNESOWA (LAB 3) 🔥 -->
    <DataTemplate DataType="{x:Type vm:WszystkieRaportSprzedazMiesiecznaViewModel}">
        <vw:WszystkieRaportSprzedazMiesiecznaView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:WszystkieRaportTopTowaryViewModel}">
