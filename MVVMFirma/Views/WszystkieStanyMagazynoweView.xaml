<vw:JedenViewBase x:Class="MVVMFirma.Views.WszystkieStanyMagazynoweView"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:vw="clr-namespace:MVVMFirma.Views"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d"
                  d:DesignHeight="300"
                  d:DesignWidth="600">

    <Grid Margin="4">
        <DataGrid ItemsSource="{Binding StanyMagazynowe}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Magazyn"
                                    Binding="{Binding Magazyn.Nazwa}" />
                <DataGridTextColumn Header="Towar"
                                    Binding="{Binding Towar.Nazwa}" />
                <DataGridTextColumn Header="Ilość"
                                    Binding="{Binding Ilosc}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</vw:JedenViewBase>
