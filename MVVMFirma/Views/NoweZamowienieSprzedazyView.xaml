<local:JedenViewBase x:Class="MVVMFirma.Views.NoweZamowienieSprzedazyView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MVVMFirma.Views"
                     mc:Ignorable="d"
                     d:DesignHeight="360"
                     d:DesignWidth="520">
    <local:JedenViewBase.Template>
        <ControlTemplate TargetType="{x:Type local:JedenViewBase}">
            <Grid Margin="0,10,0,0">
                <ContentPresenter Margin="0,5,0,5"/>
            </Grid>
        </ControlTemplate>
    </local:JedenViewBase.Template>

    <local:JedenViewBase.Resources>
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip"
                            Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ComboBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip"
                            Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DatePicker">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip"
                            Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </local:JedenViewBase.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Content="Numer" Margin="0,6,8,6"/>
            <TextBox Grid.Column="1" Grid.Row="0" Margin="0,6,0,6"
                     Text="{Binding Numer, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

            <Label Grid.Column="0" Grid.Row="1" Content="Data zamówienia" Margin="0,6,8,6"/>
            <DatePicker Grid.Column="1" Grid.Row="1" Margin="0,6,0,6"
                        SelectedDate="{Binding DataZamowienia, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

            <Label Grid.Column="0" Grid.Row="2" Content="Kontrahent" Margin="0,6,8,6"/>
            <ComboBox Grid.Column="1" Grid.Row="2" Margin="0,6,0,6"
                      ItemsSource="{Binding Kontrahenci}"
                      DisplayMemberPath="NazwaPelna"
                      SelectedItem="{Binding SelectedKontrahent, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

            <Label Grid.Column="0" Grid.Row="3" Content="Status" Margin="0,6,8,6"/>
            <ComboBox Grid.Column="1" Grid.Row="3" Margin="0,6,0,6"
                      ItemsSource="{Binding StatusyZamowien}"
                      DisplayMemberPath="Nazwa"
                      SelectedItem="{Binding SelectedStatusZamowienia, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

            <Label Grid.Column="0" Grid.Row="4" Content="Uwagi" Margin="0,6,8,6"/>
            <TextBox Grid.Column="1" Grid.Row="4" Margin="0,6,0,6"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Text="{Binding Uwagi, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
    </ScrollViewer>
</local:JedenViewBase>