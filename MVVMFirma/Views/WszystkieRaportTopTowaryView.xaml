<local:WszystkieViewBase x:Class="MVVMFirma.Views.WszystkieRaportTopTowaryView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:local="clr-namespace:MVVMFirma.Views"
                         mc:Ignorable="d"
                         d:DesignHeight="450"
                         d:DesignWidth="800">

    <Grid Margin="4">
        <DataGrid ItemsSource="{Binding List}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="0"
                  HeadersVisibility="Column">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID towaru"
                                    Width="90"
                                    Binding="{Binding IdTowaru}" />

                <DataGridTextColumn Header="Towar"
                                    Width="200"
                                    Binding="{Binding TowarNazwa}" />

                <DataGridTextColumn Header="Ilość razem"
                                    Width="110"
                                    Binding="{Binding IloscRazem}" />

                <DataGridTextColumn Header="Wartość netto"
                                    Width="120"
                                    Binding="{Binding WartoscNetto}" />

                <DataGridTextColumn Header="Wartość VAT"
                                    Width="120"
                                    Binding="{Binding WartoscVat}" />

                <DataGridTextColumn Header="Wartość brutto"
                                    Width="120"
                                    Binding="{Binding WartoscBrutto}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:WszystkieViewBase>